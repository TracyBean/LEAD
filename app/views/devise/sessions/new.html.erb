
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <div><%= f.email_field :email, :autofocus => true,:placeholder =>"Email" %></div>

  <div><%= f.password_field :password,:placeholder =>"Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me,:class => "checkbox inline" %></div>
  <% end -%>

  <div><%= f.submit "Sign in",:class=>"btn btn-large btn-primary" %></div>
  <div id="signlinkdown">
  <%= render "devise/shared/links" %>
  </div>
<% end %>